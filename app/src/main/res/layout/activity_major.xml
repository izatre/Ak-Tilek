<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MajorActivity">

    <TextView
        android:id="@+id/schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginHorizontal"
        android:background="@drawable/tollbars"
        android:gravity="center"
        android:padding="@dimen/marginHorizontal"
        android:text="@string/schedule"
        android:textColor="#000000"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toTopOf="@+id/courses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_max="300dp" />

    <TextView
        android:id="@+id/courses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginHorizontal"
        android:background="@drawable/tollbars"
        android:gravity="center"
        android:padding="@dimen/marginHorizontal"
        android:text="@string/courses"
        android:textColor="#000000"
        android:textSize="@dimen/textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/marginHorizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_max="300dp" />


</androidx.constraintlayout.widget.ConstraintLayout>