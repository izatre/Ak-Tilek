<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tollbars"
    tools:context=".ten.Week">



    <Button
        android:id="@+id/pn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/tollbars"
        android:text="ПН"
        android:textColor="#137DD5"
        app:layout_constraintBottom_toTopOf="@+id/vt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/vt"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/tollbars"
        android:text="BT"
        android:textColor="#137DD5"
        app:layout_constraintBottom_toTopOf="@+id/cr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pn" />

    <Button
        android:id="@+id/cr"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/tollbars"
        android:text="CP"
        android:textColor="#137DD5"
        app:layout_constraintBottom_toTopOf="@+id/cht"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vt" />

    <Button
        android:id="@+id/cht"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/tollbars"
        android:text="ЧТ"
        android:textColor="#137DD5"
        app:layout_constraintBottom_toTopOf="@+id/pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cr" />

    <Button
        android:id="@+id/pt"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/tollbars"
        android:text="ПT"
        android:textColor="#137DD5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cht"

        />


</androidx.constraintlayout.widget.ConstraintLayout>